{
  "name": "gemini-pad",
  "productName": "Gemini Pad",
  "version": "1.2.3",
  "description": "Simple Gemini RAG chat",
  "main": "./main.mjs",
  "build": {
    "npmRebuild": false,
    "appId": "club.tmworks.geminipad",
    "productName": "gemini-pad",
    "files": [
      "**/*",
      "**/node_modules/*",
      "!**/.env",
      "!**/temp/currentView.html",
      "!**/talk_history",
      "!**/doc/*",
      "!**/release-builds/*"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    },
    "asar": true,
    "asarUnpack": [
      "assets/**/*",
      "css/**/*",
      "l10n/**/*",
      "personality/**/*",
      "views/**/*",
      "temp/README.md",
      "node_modules/@google/generative-ai/**/*",
      "node_modules/monaco-editor/**/*",
      "splitPrompt.txt",
      "README.*md"
    ]
  },
  "scripts": {
    "start": "electron .",
    "package": "node ./package.mjs",
    "dist": "electron-builder",
    "test": "node ./test.mjs",
    "rebuild": "electron-rebuild"
  },
  "author": "DtmOyaji",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-builder-squirrel-windows": "^25.1.8"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.0",
    "@electron/packager": "^18.3.6",
    "@google/generative-ai": "^0.17.2",
    "@langchain/community": "^0.2.33",
    "@langchain/google-genai": "^0.0.25",
    "@npmcli/fs": "^3.1.1",
    "7zip-bin": "^5.2.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "esm": "^3.2.25",
    "gemini-pad": "file:",
    "htmlparser2": "^10.0.0",
    "i18n": "^0.15.1",
    "i18next": "^24.2.1",
    "marked": "^15.0.6",
    "mime": "^4.0.6",
    "monaco-editor": "^0.52.2",
    "node": "^22.13.0",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.11",
    "open": "^10.1.0",
    "parse5-htmlparser2-tree-adapter": "^7.1.0",
    "parse5-parser-stream": "^7.1.2",
    "path": "^0.12.7",
    "prebuild": "^13.0.1",
    "prebuild-install": "^7.1.2",
    "solr-client": "^0.9.0",
    "sqlite3": "5.1.6",
    "uuid": "^11.0.5",
    "whatwg-fetch": "^3.6.20"
  },
  "repository": "https://github.com/dtmoyaji/gemini-pad.git"
}
