{
  "name": "gemini-pad",
  "productName": "Gemini Pad",
  "version": "1.0.2",
  "description": "My Electron App",
  "main": "main.js",
  "build": {
    "appId": "club.tmworks.geminipad",
    "productName": "gemini-pad",
    "files": [
      "**/*",
      "**/node_modules/*",
      "!**/.env",
      "!**/temp",
      "!**/talk_history",
      "!**/release-builds/*"
    ],
    "win": {
      "target": "nsis"
    },
    "asar": false
  },
  "scripts": {
    "start": "electron .",
    "package": "node package.js",
    "dist": "electron-builder --win"
  },
  "author": "DtmOyaji",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@electron/packager": "^18.3.2",
    "@npmcli/fs": "^3.1.1",
    "7zip-bin": "^5.2.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "gemini-driver": "file:../gemini-driver",
    "marked": "^12.0.2",
    "mime": "^4.0.1",
    "monaco-editor": "^0.47.0",
    "prebuild": "^7.2.2",
    "prebuild-install": "^7.1.2",
    "sqlite3": "^5.1.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
