{
  "name": "gemini-pad",
  "productName": "Gemini Pad",
  "version": "1.1.7",
  "description": "Simple Gemini RAG chat",
  "main": "./src/main.mjs",
  "build": {
    "npmRebuild": false,
    "appId": "club.tmworks.geminipad",
    "productName": "gemini-pad",
    "files": [
      "**/*",
      "**/node_modules/*",
      "!**/.env",
      "!**/temp/currentView.html",
      "!**/talk_history",
      "!**/doc/*",
      "!**/release-builds/*"
    ],
    "win": {
      "target": "nsis"
    },
    "asar": true,
    "asarUnpack": [
      "src/assets/**/*",
      "src/css/**/*",
      "src/l10n/**/*",
      "src/personality/**/*",
      "src/views/**/*",
      "temp/README.md",
      "node_modules/@google/generative-ai/**/*",
      "splitPrompt.txt"
    ]
  },
  "scripts": {
    "start": "electron .",
    "package": "node ./src/package.mjs",
    "dist": "electron-builder --win",
    "test": "node ./src/test.mjs",
    "rebuild": "electron-rebuild",
    "build": "webpack"
  },
  "author": "DtmOyaji",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "babel-loader": "^9.1.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.14.0",
    "@electron/packager": "^18.3.2",
    "@langchain/community": "^0.2.9",
    "@langchain/google-genai": "^0.0.21",
    "@npmcli/fs": "^3.1.1",
    "7zip-bin": "^5.2.0",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "electron-i18n": "^1.3136.0",
    "gemini-pad": "file:",
    "i18n": "^0.15.1",
    "marked": "^13.0.2",
    "mime": "^4.0.1",
    "monaco-editor": "^0.50.0",
    "ollama": "^0.5.1",
    "open": "^10.1.0",
    "prebuild": "^13.0.1",
    "prebuild-install": "^7.1.2",
    "semver": "^7.3.5",
    "solr-node": "^1.2.1",
    "sqlite3": "5.1.7",
    "tar": "^7.2.0"
  },
  "resolutions": {
    "sqlite3": "5.1.6",
    "tar": "^7.2.0",
    "request": "^2.88.2",
    "tough-cookie": "^4.1.4",
    "semver": "^7.3.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": "https://github.com/dtmoyaji/gemini-pad.git"
}
