{
  "name": "gemini-pad",
  "productName": "Gemini Pad",
  "version": "1.1.5",
  "description": "My Electron App",
  "main": "main.mjs",
  "build": {
    "appId": "club.tmworks.geminipad",
    "productName": "gemini-pad",
    "files": [
      "**/*",
      "**/node_modules/*",
      "!**/.env",
      "!**/temp/currentView.html",
      "!**/talk_history",
      "!**/doc/*",
      "!**/release-builds/*"
    ],
    "win": {
      "target": "nsis"
    },
    "asar": true,
    "asarUnpack": [
      "assets/**/*",
      "css/**/*",
      "l10n/**/*",
      "personality/**/*",
      "views/**/*",
      "temp/README.md",
      "node_modules/@google/generative-ai/**/*"
    ]
  },
  "scripts": {
    "start": "electron .",
    "package": "node package.js",
    "dist": "electron-builder --win",
    "test": "node test.mjs"
  },
  "author": "DtmOyaji",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "@elastic/elasticsearch": "^8.14.0",
    "@electron/packager": "^18.3.2",
    "@langchain/community": "^0.2.9",
    "@langchain/google-genai": "^0.0.17",
    "@npmcli/fs": "^3.1.1",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "electron-i18n": "^1.3136.0",
    "i18n": "^0.15.1",
    "marked": "^12.0.2",
    "mime": "^4.0.1",
    "monaco-editor": "^0.49.0",
    "ollama": "^0.5.1",
    "prebuild": "^13.0.1",
    "prebuild-install": "^7.1.2",
    "solr-node": "^1.2.1",
    "sqlite3": "5.1.6",
    "tar": "^7.2.0"
  },
  "resolutions": {
    "sqlite3": "5.1.6",
    "tar": "^7.2.0",
    "request": "^2.88.2",
    "tough-cookie": "^4.1.4",
    "semver": "^7.3.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "repository": "https://github.com/dtmoyaji/gemini-pad.git"
}
